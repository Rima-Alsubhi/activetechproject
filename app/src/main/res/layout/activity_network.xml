<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/text19"
        android:textColor="#F70F3962"
        android:textSize="26sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_cyber"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Cyber Community"
        android:textColor="#0C3787"
        android:textSize="18sp"
        android:background="@drawable/button2" />

    <Button
        android:id="@+id/btn_data"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/btn_cyber"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Data Community"
        android:textColor="#0C3787"
        android:textSize="18sp"
        android:background="@drawable/button2" />

    <Button
        android:id="@+id/btn_software"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/btn_data"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Software Community"
        android:textColor="#0C3787"
        android:textSize="18sp"
        android:background="@drawable/button2" />

